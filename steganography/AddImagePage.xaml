<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="steganography.AddImagePage">

    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Start">
        <Entry Placeholder="Title" />

        <Image x:Name="SelectedPhoto" Aspect="AspectFill" HeightRequest="200" />

        <Button Text="Add photo"
                Clicked="OnAddPhotoClicked" />

        <Editor Placeholder="Enter text to hide..." HeightRequest="50"/>
    </VerticalStackLayout>
</ContentPage>
